<h3>{{story.title}}</h3>
<div class="row">
  <div class="col s12 m8">
    <div class="card">
      <div class="card-content">
        <span class="card-title">{{story.stitle}}</span>
        {{{story.body}}}
      </div>
      <div class="card-action">
        <span>{{formatDate story.date 'MMMM Do YYYY'}}</span>
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card blue-grey darken-1 center-align">
      <div class="card-content white-text">
        <span class="card-title">{{story.user.firstName}} {{story.user.lastName}}</span>
        <img src="{{story.user.image}}" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/users/{{story.user.id}}">More From {{story.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>