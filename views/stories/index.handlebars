<h1>Stories</h1>
<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">edit</i></a>
      </div>
      <div class="card-content">
        <a href="/stories/show/{{id}}" class="black-text">
          <span class="card-title">{{title}}</span>
          <p>{{truncate (stripTag body) 150}}</p>
        </a>
      </div>
      <div class="card-action">
        <a href="/users/{{user.id}}">
          <div class="chip">
            <img src="{{user.image}}">
            {{user.firstName}} {{user.lastName}}
          </div>
        </a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No stories found!</p>
  {{/each}}
</div>