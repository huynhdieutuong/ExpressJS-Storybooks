<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Allow Comments</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    {{#each stories}}
    <tr>
      <td><a href="/stories/show/{{id}}">{{title}}</a></td>
      <td>{{status}}</td>
      <td>{{allowComments}}</td>
      <td>{{formatDate date 'MMMM Do YYYY'}}</td>
      <td>
        <form action="/stories/duplicate/{{id}}" method="post" class="form-inline">
          <button type="submit" class="waves-effect waves-light btn"><i
              class="material-icons left">content_copy</i>Duplicate</button>
        </form>
        <a href="/stories/edit/{{id}}" class="waves-effect waves-light btn"><i
            class="material-icons left">edit</i>Edit</a>
        <form action="/stories/delete/{{id}}?_method=DELETE" method="post" class="form-inline">
          <button type="submit" class="waves-effect waves-light btn red"><i
              class="material-icons left">delete</i>Delete</button>
        </form>
      </td>
    </tr>
    {{else}}
    <tr>
      <td>No Stories Found</td>
    </tr>
    {{/each}}
  </tbody>
</table>